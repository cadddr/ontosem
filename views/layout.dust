<html>
<head>
  <link rel="stylesheet" href="css/main.css">
</head>
<body>

  <header class="container gutters-sm-all">
    <div class="col-12">
      <h6>TMR Viewer</h6>
      <form>
        <input type="checkbox" checked="true" id="toggleOptional" value="toggleOptional">
        <label for="toggleOptional">Show Optional Attributes</label>
      </form>
    </div>
  </header>

  <div class="container gutters-sm-all main">
    <!--- Commented out for now since we're using hardcoded TMR
    <div class="col-6">
      <form id="tmr-input">
        <textarea id="tmr-input-textarea" rows=20></textarea>
      </form>
    </div>
    -->

    <div class="col-8">
      <div class="rich-viewer">
        {#results}
          {> "tmr" /}
        {/results}
      </div>
    </div>
  </div>


  {?debugging}
  <div class="container gutters-sm-all debugging">
    <div class="col-12">
      <h3>Debugging:</h3>
      {test}
    </div>
  </div>
  {/debugging}

  <div id="data-sync">{data}</div>
  <!-- Hacky way to get JSON objects exposed to the client
    while also rendering the templated dust.js -->


<script src="js/zepto.js"></script>
<script src="js/client.js"></script>
<script>
</script>
</body>
</html>